    setSteps(prev => prev.map(step => 
      step.id === activeStepId 
        ? { 
            ...step, 
            items: [
              ...step.items.slice(0, itemToDuplicate.position + 1),
              duplicatedItem,
              ...step.items.slice(itemToDuplicate.position + 1)
